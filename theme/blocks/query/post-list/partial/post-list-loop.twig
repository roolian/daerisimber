
{% set grid_class = "" %}
{% set grid_class = columns == 2 ? "grid-cols-2" : grid_class %}
{% set grid_class = columns == 3 ? "grid-cols-3" : grid_class %}

<div class="grid gap-8 grid-cols-2 {{ grid_class }}">
    {% for post in posts %}
        <div class="" >
        
            {% set button = include('component/button.twig', { url: post.link, button: item_button, class: 'link-block button is-custom is-rounded is-small' }) %}
            
            {% include ["partial/tease-" ~ post_type ~ ".twig", "partial/tease.twig"] with {'post' : post}  %}

        </div>
    {% endfor %}

</div>
